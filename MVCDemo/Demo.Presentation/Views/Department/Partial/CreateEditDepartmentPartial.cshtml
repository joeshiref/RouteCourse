@model DepartmentViewModel
<form method="post" asp-controller="Department" asp-action="@ViewBag.Action" class="col-8">
    <div asp-validation-summary="All"></div>
    <div class="form-group mb-3">
        @* <label for="Code" class="form-label">Code</label> *@
        @* <input id="Code" name="Code" type="text" /> *@
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
        <label asp-for="Code" class="form-label">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CreationDate" class="form-label">CreationDate</label>
        <input type="date" asp-for="CreationDate" class="form-control" />
    </div>
    @if(ViewBag.Action == "Edit")
    {
        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Edit" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    }
    else
    {
        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="@ViewBag.Action" />
            <a class="btn btn-outline-dark" asp-controller="Department" asp-action="Index">Back to List</a>
        </div>
    }
</form>